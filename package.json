{
	"name": "svelte-sample",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"prepare": "pnpm --run smui-theme-light && pnpm --run smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme -i ./node_modules",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark -i ./node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@fontsource/fira-mono": "^5.0.0",
		"@neoconfetti/svelte": "^2.0.0",
		"@smui/button": "^7.0.0",
		"@smui/icon-button": "8.0.0-alpha.0",
		"@smui/top-app-bar": "8.0.0-alpha.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.7.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"smui-theme": "^7.0.0",
		"svelte": "^5.1.9",
		"svelte-check": "^4.0.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.10"
	},
	"type": "module",
	"engines": {
		"node": "22.x"
	}
}
